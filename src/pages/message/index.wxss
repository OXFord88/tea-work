.message {
  height: 100%;
  background: #f6f7f8;
  font-size: 24rpx;
}
.message .message-tab {
  padding: 0 32rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #d8d8d8;
  background: #fff;
}
.message .message-tab text {
  display: inline-block;
  padding: 12rpx 34rpx;
  font-size: 28rpx;
  color: #999;
}
.message .message-tab text.active {
  background: #eee;
  border-radius: 100rpx;
  color: #000;
}
.message .message-info {
  padding: 0 32rpx;
}
.message .message-title {
  display: flex;
  justify-content: space-between;
  color: #999;
  margin-top: 16rpx;
}
.message .message-title .new-msg-num {
  color: #000;
}
.message .message-list {
  margin-top: 22rpx;
}
.message .getPapeList {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.message .getPapeList > view {
  width: 332rpx;
  background: #fff;
  height: 442rpx;
  padding: 32rpx 20rpx;
  box-sizing: border-box;
  margin-bottom: 22rpx;
}
.message .getPapeList .disflex {
  display: flex;
  justify-content: space-between;
}
.message .getPapeList .content {
  font-size: 28rpx;
  line-height: 42rpx;
  height: 210rpx;
  align-items: center;
  display: flex;
}
.message .getPapeList .mt34 {
  margin-top: 68rpx;
}
.message .getPapeList .textRight {
  text-align: right;
}
.message .ml20 {
  margin-left: 40rpx;
}
.message .is-new {
  position: relative;
  padding-left: 20rpx;
}
.message .is-new:after {
  display: block;
  content: '';
  position: absolute;
  left: 0;
  top: 10rpx;
  width: 16rpx;
  height: 16rpx;
  background: #FC6620;
  border-radius: 16rpx;
}
