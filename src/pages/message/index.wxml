<!--pages/message/index.wxml-->
<view class='message'>
  <view class="message-tab">
    <text id="get" class="{{isGet && 'active'}}" bindtap="toggleTab">我收到的</text>
    <text id="send" class="{{isSend && 'active'}}" bindtap="toggleTab">我发出的</text>
  </view>
  <view class="message-info">
    <view class="message-title" wx:if="{{isGet}}">
      <view class="new-msg-num">{{num}} 张新纸条</view>
      <view>
        <text>我的收藏</text>
        <text class="ml20">全部标为已读</text>
      </view>
    </view>
    <view class="message-list">
      <view class="getPapeList" wx:if="{{isGet}}">
          <view wx:for="{{pageLists}}" wx:key="index" class="disFlex">
            <view class="col999 disflex">
              <view>
                <text class="{{item.isNew && 'is-new'}}">来自你的 </text>
                <text class="colblue">第{{item.num}}篇此刻 ></text>
              </view>
              <text class="iconfont icon-xin {{item.isZan ? 'zan' : ''}}"></text>
            </view>
            <view class="content">
              <view>{{item.content}}</view>
            </view>
            <view class="textRight mt34">
              <text class="col999">From</text>
              <text class="colblue"> {{item.name}}</text>
            </view>
            <view class="textRight col999">{{item.time}}</view>
          </view>
      </view>
      <view class="getPapeList" wx:if="{{isSend}}">
          <view wx:for="{{pageLists}}" wx:key="index" class="disFlex">
            <view class="">
              <text class="col999">From</text>
              <text class="colblue"> {{item.name}}</text>
            </view>
            <view class=" col999">{{item.time}}</view>
            <view class="content">
              <view>{{item.content}}</view>
            </view>
            <view class="col999 disflex mt34">
              <view>
                <text>发给Ta的 </text>
                <text class="colblue">第{{num}}篇此刻 ></text>
              </view>
            </view>
          </view>
      </view>
    </view>
  </view>
</view>

