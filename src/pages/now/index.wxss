/* pages/now/index.wxss */
.cardContainer {
  width: 100%;
  height: 100%;
  background: #e5e5e5;
  padding: 32rpx;
  box-sizing: border-box;
}

.cardInfo {
  background: #fff;
  padding: 48rpx;
  border-radius: 16rpx;
  color: #302137;
  font-size: 28rpx;
  line-height: 42rpx;
  min-height: 976rpx;
}
.disFlex {
  display: flex;
  justify-content: space-between;
  margin-bottom: 32rpx;
}
.nowInfo view {
  background: rgba(0,0,0,0.08);
  border-radius: 100rpx;
  font-size: 20rpx;
  color: #432617;
  text-align: center;
  line-height: 20rpx;
  padding: 10rpx 16rpx;
}
.nowInfo view.dot {
  position: relative;
  padding-left: 30rpx;
}
.dot text {
  width: 8rpx;
  height: 8rpx;
  background: #333;
  border-radius: 8rpx;
  position: absolute;
  left: 16rpx;
  top: 16rpx;
}
.cardInfo {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.cardInfo .imgBox {
  width: 100%;
}
.imgBox image {
  width: 100%;
  border-radius: 8rpx;
}
.mt4 {
  margin-top: 8rpx;
}
.showAll {
  font-size: 28rpx;
  color: #6EA4D3;
  line-height: 42rpx;
}
.time {
  font-size: 24rpx;
}
.pt42 {
  padding-top: 100rpx;
  margin-bottom: 0rpx;
}
.icon-list .iconfont {
  color: #999;
  margin-left: 32rpx;
  font-size: 24rpx;
}